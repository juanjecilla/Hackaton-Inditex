<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30px"
    tools:context="com.monoloco.zaraqueue.ManageActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="MARIA"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="45sp"/>

        <TextView
            android:id="@+id/usercode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Cod. 0048"/>

        <TextView
            android:id="@+id/userstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="No está en la cola"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/addtoqueue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10px"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="AÑADIR A LA COLA"
            android:textColor="@color/colorPrimary"/>

        <View
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/numberofitems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2 prendas"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"/>

        <FrameLayout
            android:id="@+id/clothesitem01"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="top"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/item_image01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_weight="1"
                android:src="@drawable/img_manage_item01" />

            <TextView
                android:id="@+id/eliminateitem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginTop="5dp"
                android:text="Eliminar"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="70dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAMISETA BASIC CONTRASTE"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/item_ref1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Negro - Ref: 1198/210"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/item_size1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="M"
                    android:textSize="16sp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/clothesitem02"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="top"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/item_image02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_weight="1"
                android:src="@drawable/img_manage_item02" />

            <TextView
                android:id="@+id/eliminateitem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginTop="5dp"
                android:text="Eliminar"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="70dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VESTIDO ESTAMPADO GOMA"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/item_ref2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Negro - Ref: 5580/251"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/item_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="M"
                    android:textSize="16sp" />

            </LinearLayout>

        </FrameLayout>

        <Button
            android:id="@+id/scanclothes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:layout_marginBottom="60px"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_gravity="center_horizontal"
            android:text="ESCANEAR PRENDAS"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

</ScrollView>