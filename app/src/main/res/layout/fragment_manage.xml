<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30px"
    tools:context="com.monoloco.zaraqueue.ManageActivityFragment"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="PROBADORES"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="45sp"
            />
        <TextView
            android:id="@+id/storecode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="ZARA TRF C/Preciados"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:columnCount="5">


            <TextView
                android:id="@+id/cabin01"
                android:layout_width="@dimen/circle"
                android:layout_height="@dimen/circle"
                android:background="@drawable/circle"
                android:gravity="center"
                android:margin="10dp"
                android:text="01"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/cabin02"
                android:layout_width="@dimen/circle"
                android:layout_height="@dimen/circle"
                android:background="@drawable/circle"
                android:gravity="center"
                android:padding="10dp"
                android:text="02"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/cabin03"
                android:layout_width="@dimen/circle"
                android:layout_height="@dimen/circle"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="03"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/cabin04"
                android:layout_width="@dimen/circle"
                android:layout_height="@dimen/circle"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="03"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/cabin05"
                android:layout_width="@dimen/circle"
                android:layout_height="@dimen/circle"
                android:background="@drawable/circle"
                android:backgroundTint="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="04"
                android:textColor="@color/colorPrimary"/>


        </GridLayout>



        <TextView
            android:id="@+id/userstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Turno confirmado"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/usertime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Tiempo previsto en probador 8 min"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/checkin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10px"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="ASIGNAR PROBADOR"
            android:textColor="@color/colorPrimary"/>




        <View
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:background="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/numberofitems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2 prendas"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"/>

        //Prendas

        <FrameLayout
            android:id="@+id/clothesitem01"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="top"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/item_image01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_weight="1"
                android:src="@drawable/img_manage_item01" />

            <TextView
                android:id="@+id/eliminateitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginTop="5dp"
                android:text="Eliminar"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="70dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAMISETA BASIC CONTRASTE"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/item_ref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Negro - Ref: 1198/210"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/item_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="M"
                    android:textSize="16sp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/clothesitem01"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="top"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/item_image01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_weight="1"
                android:src="@drawable/img_manage_item02" />

            <TextView
                android:id="@+id/eliminateitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginTop="5dp"
                android:text="Eliminar"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="70dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VESTIDO ESTAMPADO GOMA"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/item_ref"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Negro - Ref: 5580/251"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/item_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="M"
                    android:textSize="16sp" />
            </LinearLayout>
        </FrameLayout>


        <Button
            android:id="@+id/scanclothes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            android:layout_marginBottom="60px"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_gravity="center_horizontal"
            android:text="ESCANEAR PRENDAS"
            android:textColor="@color/colorPrimary"/>




    </LinearLayout>


</ScrollView>